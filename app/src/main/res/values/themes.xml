<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Novelista" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="colorPrimaryDark">@android:color/holo_purple</item>
        <item name="colorControlHighlight">@color/highlight</item>
        </style>
    <style name="Dialog_Theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/dialog_back</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shape">oval</item>
        <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:gravity">center</item>
    </style>
    <style name="Text_Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.Novelista" parent="Base.Theme.Novelista" />

    <style name="Theme.Novelista.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Novelista.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Novelista.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>